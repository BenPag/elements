{
  "private": true,
  "description": "This is a Monorepo root package which is used to execute build scripts.",
  "scripts": {
    "build": "lerna run build",
    "build.local": "./scripts/publishlocal.sh",
    "start": "lerna run dev --parallel",
    "test": "lerna run test",
    "clean": "yarn clean:packages && yarn clean:artifacts && yarn clean:root",
    "clean:packages": "lerna clean --yes",
    "clean:artifacts": "lerna run clean --parallel",
    "clean:root": "rm -rf node_modules",
    "lint": "lerna run lint",
    "version": "lerna run build && lerna run test && lerna version --no-push --yes"
  },
  "devDependencies": {
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4",
    "yalc": "^1.0.0-pre.32"
  },
  "dependencies": {
    "lerna": "^3.18.3"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "packages/elements-angular/elements/**"
    ],
    "nohoist": [
      "**/@types/jasmine",
      "**/@types/jasminewd2",
      "**/flatpickr"
    ]
  },
  "name": "core",
  "version": "0.0.1"
}
