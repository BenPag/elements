{
  "private": true,
  "description": "This is a Monorepo root package which is used to execute build scripts.",
  "scripts": {
    "build": "lerna run build",
    "build.local": "./scripts/publishlocal.sh",
    "start": "lerna run build --scope=@inovex/elements && lerna run dev --parallel",
    "changelog": "yarn changelog:root && yarn changelog:pkgs",
    "changelog:root": "conventional-changelog -p angular -i ./CHANGELOG.md -s",
    "changelog:pkgs": "lerna exec --concurrency 1 --stream -- 'conventional-changelog --p angular --commit-path $PWD --pkg $PWD/package.json -i $PWD/CHANGELOG.md -s'",
    "test": "lerna run test",
    "clean": "yarn clean:packages && yarn clean:artifacts && yarn clean:root",
    "clean:packages": "lerna clean --yes",
    "clean:artifacts": "lerna run clean --parallel",
    "clean:root": "rm -rf node_modules",
    "lint": "lerna run lint",
    "preversion": "yarn run build && yarn run test",
    "version": "node ./scripts/bumprootversion.js && yarn changelog && git add -A"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@commitlint/config-lerna-scopes": "^8.2.0",
    "conventional-changelog-cli": "^2.0.31",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4",
    "yalc": "^1.0.0-pre.32"
  },
  "dependencies": {
    "currency.js": "^1.2.2",
    "lerna": "^3.18.3"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "packages/elements-angular/elements/**"
    ],
    "nohoist": [
      "**/@types/jasmine",
      "**/@types/jasminewd2",
      "**/flatpickr"
    ]
  },
  "name": "core",
  "version": "0.11.0"
}