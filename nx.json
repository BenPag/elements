{
  "affected": {
    "defaultBase": "origin/master"
  },
  "workspaceLayout": {
    "appsDir": "packages",
    "libsDir": "packages"
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "cache": true
    },
    "test": {
      "cache": true
    },
    "lint": {
      "cache": true
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "dependsOn": ["^version"],
      "options": {
        "baseBranch": "master",
        "syncVersions": true,
        "trackDeps": false,
        "dryRun": false,
        "push": false,
        "commitMessageFormat": "chore: publish {version}",
      },
      "configurations": {
        "prerelease": {
          "releaseAs": "prerelease",
          "skipRootChangelog": true,
          "postTargets": ["deploy-npm"],
          "push": false
        }
      }
    }
  },
  "generators": {
    "@nx/angular:application": {
      "style": "scss",
      "linter": "eslint",
      "unitTestRunner": "none",
      "e2eTestRunner": "none"
    },
    "@nx/angular:library": {
      "linter": "eslint",
      "unitTestRunner": "none"
    },
    "@nx/angular:component": {
      "style": "scss"
    }
  },
  "cacheDirectory": ".nx-cache"
}
