{
  "name": "workspace",
  "$schema": "node_modules/nx/schemas/project-schema.json",
  "targets": {
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "syncVersions": true,
        "skipProjectChangelog": true,
        "dryRun": false,
        "push": false,
        "commitMessageFormat": "chore: publish {version}",
        "postTargets": ["deploy-npm"]
      },
      "configurations": {
        "prerelease": {
          "releaseAs": "prerelease",
          "skipRootChangelog": true,
          "postTargets": ["deploy-npm"],
          "push": false
        }
      }
    },
    "deploy-npm": {
      "executor": "nx:run-commands",
      "dependsOn": ["^build"],
      "options": {
        "commands": [
          "nx release version $(awk -F'\"' '/\"version\": \".+\"/{ print $4; exit; }' package.json)"
        ],
        "parallel": false
      }
    },
    "deploy-github": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "tag": "{tag}",
        "notes": "{notes}"
      }
    }
  },
  "tags": [],
  "implicitDependencies": [
    "elements",
    "elements-angular",
    "elements-react",
    "elements-vue"
  ]
}
