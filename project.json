{
  "name": "workspace",
  "$schema": "node_modules/nx/schemas/project-schema.json",
  "targets": {
    "release": {
      "executor": "@jscutlery/semver:version",
      "dependsOn": ["^build"],
      "options": {
        "syncVersions": true,
        "skipProjectChangelog": true,
        "skipCommit": true,
        "dryRun": false,
        "push": false,
        "postTargets": ["publish", "deploy-github"]
      },
      "configurations": {
        "dryRun": {
          "dryRun": true
        }
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node ./scripts/publish.js dryRun={args.dryRun}"
      }
    },
    "deploy-github": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "tag": "{tag}",
        "notes": "{notes}"
      }
    }
  },
  "implicitDependencies": [
    "elements",
    "elements-angular",
    "elements-react",
    "elements-vue"
  ],
  "tags": []
}
